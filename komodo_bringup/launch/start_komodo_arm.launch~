<!-- -*- mode: xml -*- -->

<launch>

    <node name="dynamixel_manager" pkg="dynamixel_controllers" type="controller_manager.py" required="true" output="screen">
        <rosparam>
            namespace: dxl_manager
            serial_ports:
                arm_port:
                    port_name: "/dev/USB2DYNAMIXEL"
                    baud_rate: 57142
                    min_motor_id: 1
                    max_motor_id: 9
                    update_rate: 20
        </rosparam>
    </node>

    <rosparam file="$(find my_dynamixel_tutorial)/config/komodo_arm.yaml" command="load"/>


  <node name="arm_controller_spawner" pkg="dynamixel_controllers" type="controller_spawner.py"
          args="--manager=dxl_manager
                --port=arm_port
                base_rotation_controller
                shoulder_controller
		        elbow1_controller
		        elbow2_controller
		        wrist_controller
		        left_finger_controller
		        right_finger_controller
		        elevator_controller"
          output="screen"/>



  <!-- Start joints trajectory controller controller -->
    <rosparam file="$(find my_dynamixel_tutorial)/config/joints_trajectory_controller.yaml" command="load"/>

    <node name="controller_spawner_meta" pkg="dynamixel_controllers" type="controller_spawner.py"
          args="--manager=dxl_manager
                --type=meta
                f_arm_controller
                base_rotation_controller:
                shoulder_controller:
                elbow1_controller
                elbow2_controller
                wrist_controller"               
                output="screen"/>

